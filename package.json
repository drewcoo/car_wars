{
  "name": "car_wars",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
       "html", "lcov"
    ]
  },
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "math.js": "^1.1.43",
    "mathjs": "^6.0.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hotkeys": "^1.1.4",
    "react-redux": "^7.1.0-alpha.1",
    "react-scripts": "3.0.0",
    "redux": "^4.0.1",
    "redux-starter-kit": "^0.4.3",
    "redux-thunk": "^2.3.0",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --testMatch **/__tests__/**/*.spec.js",
    "test:coverage": "npm test -- --coverage --verbose --watchAll",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "installConfig": {
    "pnp": true
  },
  "devDependencies": {
    "redux-immutable-state-invariant": "^2.1.0"
  }
}
