{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest/globals": true,
        "node": true
    },
    "extends": [
      "standard",
      "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "jest",
        "react"
    ],
    "rules": {
      "react/prop-types": 0
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
}
