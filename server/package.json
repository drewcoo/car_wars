{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "jest": {
    "verbose": true
  },
  "main": "index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline",
    "debug": "babel-watch --inspect 9229 src/index.js",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "start": "nodemon --exec \"npm run build && node -r esm build/index.js\" --watch ./src",
    "test": "jest --testMatch **/__tests__/**/*.spec.js --watchAll",
    "cover": "jest --testMatch ./src/**/__tests__/**/*.spec.js --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-arrow-functions": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/bluebird": "^3.5.32",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.151",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "esm": "^3.2.25",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.2",
    "metro-react-native-babel-preset": "^0.59.0",
    "prettier-eslint": "^9.0.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "@types/uuid": "^8.0.0",
    "apollo-server": "^2.9.16",
    "apollo-server-express": "^2.9.16",
    "awesome-typescript-loader": "^5.2.1",
    "bluebird": "^3.7.2",
    "commonjs": "0.0.1",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "node": "^14.2.0",
    "nodemon": "^2.0.4",
    "qs-middleware": "^1.0.3",
    "source-map-loader": "^0.2.4",
    "typescript": "^3.7.5",
    "uuid": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
